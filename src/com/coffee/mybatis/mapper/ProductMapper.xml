<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Product">
	<resultMap type="Product" id="ProductMap">
		<id column="product_id" property="product_id"/>
		<result column="name" property="name"/>
		<result column="filename" property="filename"/>
		<result column="price" property="price"/>
		<result column="cost" property="cost"/>
		<association column="category_id" property="category" javaType="Category" select="Category.select"></association>
	</resultMap>
	
	<!-- sql select -->
	<sql id="sql_select">select product_id, name, filename, price, cost, category_id from product</sql>
	
	<!-- 관리자 페이지 상품 추가 -->
	<insert id="insert" parameterType="Product">
		insert into product(product_id, name, filename, price, cost, category_id)
		values(seq_product.nextval, #{name},#{filename},#{price},#{cost},#{category.category_id})
	</insert>
	
	<!-- 관리자 페이지 상품 목록 + pointmall 페이지 및 메뉴 페이지에서 불러오기-->
	<select id="selectAll" resultMap="ProductMap">
		<include refid="sql_select"/> order by product_id desc
	</select>
	
	<!-- 관리자 페이지 상품 상세정보 -->
	<select id="select" parameterType="Product" resultMap="ProductMap">
		<include refid="sql_select"/> where product_id = #{product_id}
	</select>
	
	<!-- 관리자 페이지 상품 수정 -->
	<update id="update" parameterType="Product">
		update product set name = #{name}, filename = #{filename}, price = #{price}, cost = #{cost}, category_id = #{category.category_id}
		where product_id = #{product_id}
	</update>
	
	<!-- 관리자 페이지 상품 삭제 -->
	<delete id="delete" parameterType="int">
		delete from product where product_id = #{product_id}
	</delete>
	
</mapper>